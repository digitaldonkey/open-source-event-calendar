{% if activated %}
    <div id="message2" class="updated">
        <p>{{ activated_message|raw }}</p>
    </div>
{% endif %}
{% if deleted %}
    <div id="message3" class="updated">
        <p> {{deleted_message }}</p>
    </div>
{% endif %}
<div class="wrap">
    <h1 class="wp-heading-inline">{{ page_title }}</h1>
    <h3 class="">{{ current_theme_label }}</h3>
    <div class="theme-browser wp-clearfix">
        <div id="current-theme"  class="theme {% if current_theme.has_screenshot %} has-screenshot{% endif %}">
            {% if current_theme.has_screenshot %}
                <div class="theme-screenshot">
                    <img src="{{ current_theme.screenshot_uri }}" alt="{{ current_theme.screenshot_alt }}"/>
                </div>
            {% endif %}
            <h2 class="theme-name">{{ current_theme.title }}</h2>
            <div class="theme-info">
                <div class="theme-description">{{ current_theme.description }}</div>
                {% if current_theme.has_tags %}
                    <div class="theme-tags">
                        {{ current_theme.tags }}
                    </div>
                {% endif %}
                <div class="theme-templates">
                    {{ current_theme.template_dir_text }}:
                    <br />
                    <code>{{ current_theme.template_dir }}</code>
                </div>
            </div>
        </div>
    </div>
    <hr class="wp-clearfix"/>
    {% if display_theme_list %}
        <h3>{{ available_themes_label }}</h3>
        <div class="theme-browser ">
            {{ available_themes|raw }}
        </div>
        <hr class="wp-clearfix"/>
    {% endif %}
</div>
