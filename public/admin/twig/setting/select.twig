<label class="ai1ec-control-label" for="{{ id }}">
    {{ label | raw }}
</label>
<div>
    {% from 'form-elements/select.twig' import select %}
    {{ select( id, name, attributes, options ) }}
    {% if help is defined %}
        <div class="ai1ec-help-block">{{ help | raw }}</div>
    {% endif %}
</div>
{% if fieldsets is not empty %}
    {% for fieldset in fieldsets %}
        {{ fieldset | raw }}
    {% endfor %}
{% endif %}
